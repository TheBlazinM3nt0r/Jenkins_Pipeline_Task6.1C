pipeline {
    agent any

    environment {
        unitTestSuccess = false
        securityScanSuccess = false
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the application..'
                // Specify the build tool
                echo 'Using Maven to compile and package the code'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running Unit Integration Test...'
                // Specify the testing tools
                echo 'Using JUnit for unit tests and TestNG for integration tests'
                script {
                    unitTestSuccess = true
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Performing code analysis...'
                // Specify code analysis tool
                echo 'Using SonarQube for code quality'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Performing security scan...'
                // Specify the security scanning tool
                echo 'Using OWASP Dependency-Check as the tool for vulnerability check'
                script {
                    securityScanSuccess = true
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying the application to the staging environment...'
                // Specify the deployment server or tool
                echo 'Deploying to Azure VM instance'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Testing on Staging Environment...'
                // Specify the integration testing tool
                echo 'Using Cypress to perform end-to-end testing'
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying the Application to production...'
                // Specify the deployment server or tool
                echo 'Deploying to Azure VM instance'
            }
        }
    }

    post {
        always {
            script {
                if (unitTestSuccess) {
                    emailext(
                        to: 'nicholaskrcevinac@gmail.com',
                        subject: "Unit and Integration Test Success",
                        body: "The Unit and Integration Test stage has completed successfully.",
                        attachLog: true
                    )
                } else {
                    emailext(
                        to: 'nicholaskrcevinac@gmail.com',
                        subject: "Unit and Integration Test Failure",
                        body: "The Unit and Integration Test stage has failed. Please check the attached logs for details.",
                        attachLog: true
                    )
                }

                if (securityScanSuccess) {
                    emailext(
                        to: 'nicholaskrcevinac@gmail.com',
                        subject: "Security Scan Success",
                        body: "The Security Scan stage has completed successfully.",
                        attachLog: true
                    )
                } else {
                    emailext(
                        to: 'nicholaskrcevinac@gmail.com',
                        subject: "Security Scan Failure",
                        body: "The Security Scan stage has failed. Please check the attached logs for details.",
                        attachLog: true
                    )
                }
            }
        }
    }
}
